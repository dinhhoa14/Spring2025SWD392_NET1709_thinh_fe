{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@pages/*": [
                "src/page/*"
            ],
            "@containers/*": [
                "src/container/*"
            ],
            "@layouts/*": [
                "src/layout/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}